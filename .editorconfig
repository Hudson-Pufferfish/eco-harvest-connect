# See editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[**.hbs]
indent_style = space
indent_size = 2

[**.js]
indent_style = space
indent_size = 2

[**.json]
indent_style = space
indent_size = 2

[**.scss]
indent_style = space
indent_size = 2

[**.xml]
indent_style = space
indent_size = 4
